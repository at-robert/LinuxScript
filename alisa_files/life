function get_links(){

    OUT_FILE=~/Downloads/temp.txt

    # 判斷環境 (macOS 或 Linux)
    if command -v pbpaste &>/dev/null; then
        CLIP_CMD="pbpaste"
    elif command -v xclip &>/dev/null; then
        CLIP_CMD="xclip -selection clipboard -o"
    elif command -v xsel &>/dev/null; then
        CLIP_CMD="xsel --clipboard --output"
    else
        echo " 無法取得剪貼簿內容，請安裝 pbpaste（mac）或 xclip/xsel（Linux）"
        exit 1
    fi

    # 取得剪貼簿中的所有網址
    ALL_LINKS=$(eval "$CLIP_CMD" | grep -Eo '(https?://[^"'"'"'<> ]+)' | sort -u)

    # 如果有參數 a，則篩選 katfile 或 mega
    if [[ "$1" == "a" ]]; then
        echo "$ALL_LINKS" | grep -E '^https://(katfile|mega)' > "$OUT_FILE"
    else
        echo "$ALL_LINKS" > "$OUT_FILE"
    fi

    echo " 網址已輸出至 $OUT_FILE"

    # 若有結果，顯示部分內容供確認
    if [[ -s "$OUT_FILE" ]]; then
        echo "以下為擷取結果："
        head -n 10 "$OUT_FILE"
    else
        echo "⚠ 沒有擷取到符合條件的網址"
    fi

}





